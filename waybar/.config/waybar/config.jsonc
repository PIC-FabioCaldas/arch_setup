// -*- mode: jsonc -*-
{
  //"layer": "top", // Waybar at top layer
  "height": 40,
  "modules-left": ["hyprland/workspaces", "hyprland/window"],
  "modules-center": ["clock", "custom/notification"],
  "modules-right": [
//    "tray",
//    "group/hw",
    "group/control",
    "hyprland/language",
    "custom/power"
  ],
  "hyprland/workspaces": {
    "on-click": "activate",
    "format": "{icon}",
    "format-icons": {
      "1": "<b>1</b>",
      "2": "<b>2</b>",
      "3": "<b>3</b>",
      "4": "<b>4</b>",
      "5": "<b>5</b>",
      "6": "<b>6</b>",
      "7": "<b>7</b>",
      "8": "<b>8</b>",
      "9": "<b>9</b>",
    }
  },
  "hyprland/window": {},
  "tray": {
    "icon-size": 17,
    "spacing": 8
  },
  "group/hw": {
    "orientation": "horizontal",
    "modules": ["cpu", "memory", "temperature"]
  },
  "cpu": {
    "format": "<span color='#b2ccd6'>󰍛</span> {usage}%",
    "interval": 60,
    "on-click": "kitty btop"
  },
  "memory": {
    "format": "<span color='#c792ea'>󰘚</span> {used:.2g}GB",
    "interval": 60,
    "on-click": "kitty btop"
  },
  "group/control": {
    "orientation": "horizontal",
    "modules": ["battery", "network", "bluetooth", "pulseaudio", "backlight"]
  },

  "battery": {
    "states": {
      "good": 80,
      "warning": 25,
      "critical": 10
    },
    "format": "<span color='#c3e88d'>{icon}</span> {capacity}%",
    "format-charging": "<span color='#c3e88d'>󰂄</span> {capacity}%",
    "format-plugged": "<span color='#c3e88d'></span> {capacity}%",
    "tooltip-format": "{time} left",
    "format-icons": ["", "", "", "", ""],
    "interval": 60 
  },

  "network": {
    "format-ethernet": "<span color='#89ddff'>󰈁</span> {bandwidthDownBytes:=}",
    "format-wifi": "<span color='#89ddff'>{icon}</span> {signalStrength}%",
    "format-disconnected": "<span color='#89ddff'>󰤭</span>",
    "format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
    "interval": 30,
    "tooltip-format": "{essid}",
    "on-click": "kitty nmtui"
  },
  "bluetooth": {
    "format": "<span color='#82aaff'></span> {status}",
    "format-connected-battery": "<span color='#82aaff'>󰥉</span> {device_battery_percentage}%",
    "tooltip-format": "{device_alias} {status}",
    "on-click": "kitty -e bluetui"
  },
  "pulseaudio": {
    "format": "<span color='#f78c6c'>{icon}</span> {volume}%",
    "format-muted": "<span color='#f78c6c'></span> {volume}%",
    "format-bluetooth": "<span color='#f78c6c'>{icon}</span> {volume}%",
    "format-bluetooth-muted": "<span color='#f78c6c'></span> {volume}%",
    "format-icons": {
      "headphone": "",
      "phone": "",
      "portable": "󰓃",
      "default": ["", "", ""]
    },
    "on-click": "pwvucontrol"
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "<span color='#ffcb6b'>󰖨</span> {percent}%",
    "tooltip": false
  },
  "hyprland/language": {
    "format": "<span color='#c792ea'></span> {shortDescription} ",
    "keyboard-name": "at-translated-set-2-keyboard",
    "min-length": 5,
    "on-click": "hyprctl switchxkblayout at-translated-set-2-keyboard next"
  },
  "clock": {
    "timezone": "Europe/Lisbon",
    "format": "<span color='#ffcb6b'>󰥔</span> {:%a %b %d %R %p}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
  },
  "temperature": {
    "critical-threshold": 80,
    "format": "{icon} {temperatureC}°C",
    "format-icons": [
      "<span color='#ffcb6b'></span>",
      "<span color='#ffcb6b'></span>",
      "<span color='#ffcb6b'></span>",
      "<span color='#ffcb6b'></span>",
      "<span color='#ffcb6b'></span>",
    ],
    "on-click": "kitty btop",
    "interval": 60
  },
  "custom/notification": {
    "tooltip": false,
    "rotate": 0,
    "format": "{icon}",
    "format-icons": {
      "notification": "󱅫",
      "none": "󰂚",
      "dnd-notification": "󰅸",
      "dnd-none": "󰂜",
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click-right": "swaync-client -d -sw",
    "on-click": "swaync-client -t -sw",
    "escape": true,
    "margin-left": 10,
    "margin-right": 5,
  },
  "custom/power": {
    "format": "<span color='#f07178'></span>",
    "on-click": "pkill wlogout || wlogout",
    "tooltip": false
  }
}
